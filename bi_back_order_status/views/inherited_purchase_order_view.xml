<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!-- Purchase Order Form View -->
		<record id="purchase_order_form_inherit" model="ir.ui.view">
			<field name="name">purchase.order.form.inherit</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//div[@name='button_box']" position="inside">
                    <button name="view_backorders" type="object" icon="fa-bars" class="oe_stat_button"
							invisible="is_backorder == False">
                        <field string="Back Orders" name="total_backorders" widget="statinfo"/>
                    </button>
                </xpath>
				<field name="date_order" position="after">
					<field name="is_backorder" invisible="1"/>
				</field>
			</field>
		</record>

		<!--  Purchase Order Tree View -->
		<record id="purchase_order_kpis_tree_inherit" model="ir.ui.view">
			<field name="name">purchase.order.kpis.tree.inherit</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
			<field name="arch" type="xml">
				<field name="state" position="after">
					<field name="is_backorder" optional="hide"/>
				</field>
			</field>
		</record>

		<record id="purchase_order_view_search_inherit" model="ir.ui.view">
			<field name="name">purchase.order.view.search.inherit</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_view_search"/>
			<field name="arch" type="xml">
			<xpath expr="//search/filter[@name='activities_upcoming_all']" position="after">
				<separator/>
				<filter string="Backorders" domain="[('is_backorder', '=', True)]" name="purchase_backorder"/>
			</xpath>
			</field>
		</record>

	</data>
</odoo>