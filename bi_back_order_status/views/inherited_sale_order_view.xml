<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!-- Sale Order Form View -->
		<record id="view_order_form_inherit" model="ir.ui.view">
			<field name="name">view.order.form.inherit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//div[@name='button_box']" position="inside">
                    <button name="view_backorders" type="object" icon="fa-bars" class="oe_stat_button"
							invisible="is_backorder == False">
                        <field string="Back Orders" name="total_backorders" widget="statinfo"/>
                    </button>
                </xpath>

				<field name="date_order" position="after">
					<field name="is_backorder" invisible="1"/>
				</field>
			</field>
		</record>

		<!--  Sale Order Tree View -->
		<record id="view_quotation_tree_inherit" model="ir.ui.view">
			<field name="name">view.quotation.tree.inherit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_quotation_tree"/>
			<field name="arch" type="xml">
				<field name="state" position="after">
					<field name="is_backorder" optional="hide"/>
				</field>
			</field>
		</record>

		<record id="view_sales_order_filter_inherit" model="ir.ui.view">
			<field name="name">view.sales.order.filter.inherit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_sales_order_filter"/>
			<field name="arch" type="xml">
			<xpath expr="//search/filter[@name='activities_upcoming_all']" position="after">
				<separator/>
				<filter string="Backorders" domain="[('is_backorder', '=', True)]" name="sale_backorder"/>
			</xpath>
			</field>
		</record>

	</data>
</odoo>