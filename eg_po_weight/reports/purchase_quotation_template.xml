<odoo>
    <data>
        <template id="purchase_quotation_template_for_po_weight"
                  inherit_id="purchase.report_purchasequotation_document">
            <xpath expr="//thead/tr/th[@name='th_quantity']" position="after">
                <th>
                    <strong>Weight</strong>
                </th>
                <th>
                    <strong>Weight Uom</strong>
                </th>
            </xpath>
            <xpath expr="//tbody/t/tr/t[1]/td[3]" position="after">
                <td>
                    <span t-field="order_line.product_weight"/>
                </td>
                <td>
                    <span t-field="order_line.product_uom"/>
                </td>
            </xpath>
        </template>
    </data>
</odoo>
