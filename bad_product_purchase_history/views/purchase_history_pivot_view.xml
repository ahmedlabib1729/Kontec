<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_purchase_order_history_pivot">
        <field name="name">product.month.pivot</field>
        <field name="model">purchase.report</field>
        <field name="arch" type="xml">
            <pivot string="Purchase Analysis" display_quantity="1" sample="1">
                <field name="category_id" type="row" />
                <field name="order_id" type="measure" />
                <field name="untaxed_total" type="measure" />
                <field name="price_total" type="measure" />
                <field name="date_order" type="col" interval="year" />
                <field name="date_order" type="col" interval="month" />
            </pivot>
        </field>
    </record>
    <!-- T4975 Override pivot view -->
    <record id="action_purchase_order_history" model="ir.actions.act_window">
        <field name="name">Purchase History Analysis</field>
        <field name="res_model">purchase.report</field>
        <field name="view_mode">pivot</field>
        <field name="domain">[('state', 'in', ('purchase','done'))]</field>
        <field
            name="view_id"
            ref='bad_product_purchase_history.view_purchase_order_history_pivot'
        />
        <field
            name="views"
            eval="[[ref('bad_product_purchase_history.view_purchase_order_history_pivot'),'pivot']],"
        />
    </record>
</odoo>
