<?xml version="1.0" encoding="UTF-8" ?>
<!-- T4975 Adding a widget on a purchase order line -->
<odoo>
    <record id="purchase_order_history_view_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field
            name="inherit_id"
            ref="purchase_stock.purchase_order_view_form_inherit"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//page/field[@name='order_line']/list/field[@name='product_id']"
                position="after"
            >
                <widget name="bad_product_purchase_history_widget" />
                <!-- Added field #T6893 -->
                <field name="display_purchase_widget" column_invisible="1" />
            </xpath>
        </field>
    </record>
</odoo>
