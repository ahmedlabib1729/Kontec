<odoo>
    <data>
        <template id="purchase_order_template_for_po_weight"
                  inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//table[hasclass('o_main_table')]/thead/tr/th[3]" position="after">
                <th class="text-right">
                    <strong>Weight</strong>
                    <strong>Weight Uom</strong>
                </th>
            </xpath>
            <xpath expr="//table[hasclass('o_main_table')]/tbody/t[2]/tr/t[1]/td[3]" position="after">
                <td class="text-right">
                    <span t-field="line.product_weight"/>
                     <span t-field="line.product_uom"/>
                </td>
            </xpath>
            <xpath expr="//div[@id='total']/div/table" position="inside">
                <tr class="border-black o_total">
                    <td>
                        <strong>Total Weight</strong>
                    </td>
                    <td class="text-right">
                        <span t-esc="o.total_weight"/>
                    </td>
                </tr>
            </xpath>
        </template>
    </data>
</odoo>